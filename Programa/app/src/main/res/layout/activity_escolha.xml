<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EscolhaActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotcc" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="Bem Vindo(a),"
        android:textColor="@color/verde"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="pronto para começar?"
        android:textColor="@color/cinza_medio"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:layout_marginTop="15dp"
        android:text="Explore serviços dos mais variados tipos durante sua visita, tudo pelo app!"
        android:textAlignment="center"
        android:textColor="@color/cinza_claro"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <LinearLayout
            android:id="@+id/buttoncriarconta"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/btn_button"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            app:backgroundTint="@null"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_marginTop="24dp"
                android:text="Criar Conta"
                android:textColor="@color/cinza_escuro"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

            <LinearLayout
                android:layout_marginLeft="80dp"
                android:layout_marginTop="08dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_redondo_cinza">
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/espaco"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/buttonlogin"

            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/btn_button_cinza"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            app:backgroundTint="@null"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="145dp"
                android:layout_height="35dp"
                android:layout_marginTop="24dp"
                android:text="Sou Cadastrado"
                android:textAlignment="center"
                android:textColor="@color/verde"
                android:textSize="20dp"
                android:textStyle="bold">
            </TextView>

            <LinearLayout
                android:layout_marginLeft="80dp"
                android:layout_marginTop="08dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_redondo_verde">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/textVie3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Política de privacidade"
        android:textAlignment="center"
        android:textColor="@color/cinza_claro"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textVi"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Termos de Segurança"
        android:textAlignment="center"
        android:textColor="@color/cinza_claro"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVie3" />


</androidx.constraintlayout.widget.ConstraintLayout>


